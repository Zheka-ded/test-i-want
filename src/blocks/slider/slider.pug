section.slider.wow.bounceInDown
    .slider__content
        .mySlides.fade
            img.slider__img(src="./img/520312566_1280x720.jpg", alt="minion-photo")
        .mySlides.fade
            img.slider__img(src="./img/maxresdefault.jpg", alt="minion-photo")
        .mySlides.fade
            img.slider__img(src="./img/maxresdefault (1).jpg", alt="minion-photo")
        .mySlides.fade
            img.slider__img(src="./img/maxresdefault (2).jpg", alt="minion-photo")
        a.prev(onclick="plusSlides(-1)")
            i(class="fas fa-chevron-circle-left")
        a.next(onclick="plusSlides(1)")
            i(class="fas fa-chevron-circle-right")
        .dot-wrap(style="text-align: center")
            span.dot(onclick="plusSlides(1)")
            span.dot(onclick="plusSlides(2)")
            span.dot(onclick="plusSlides(3)")
            span.dot(onclick="plusSlides(4)")
